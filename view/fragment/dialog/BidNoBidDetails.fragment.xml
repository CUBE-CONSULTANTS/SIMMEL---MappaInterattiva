<core:FragmentDefinition
  xmlns="sap.ui.table"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core"
>
  <m:VBox>
    <Table
        visibleRowCount="20"
        selectionMode="None"
        rows="{detailsDialog>/bidnobid/items}"
      >
        <toolbar>
          <core:Fragment fragmentName="simmel.mappaInterattiva.view.fragment.dialog.TableActions" type="XML" />
        </toolbar>
        <columns>
          <Column sortProperty="bidnobid_number" filterProperty="bidnobid_number">
            <m:Label tooltip="BID Number" text="BID Number" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>bidnobid_number}" />
            </template>
          </Column>
          <Column sortProperty="sales_manager" filterProperty="sales_manager">
            <m:Label tooltip="Sales Manager" text="Sales Manager" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>sales_manager}" />
            </template>
          </Column>
          <Column sortProperty="program_manager" filterProperty="program_manager">
            <m:Label tooltip="Program Manager" text="Program Manager" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>program_manager}" />
            </template>
          </Column>
          <Column sortProperty="preventive_number" filterProperty="preventive_number">
            <m:Label tooltip="Preventive Number" text="Preventive Number" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>preventive_number}" />
            </template>
          </Column>
          <Column sortProperty="description" filterProperty="description">
            <m:Label tooltip="Description" text="Description" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>description}" />
            </template>
          </Column>
          <Column sortProperty="quantity" filterProperty="quantity">
            <m:Label tooltip="Quantity" text="Quantity" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>quantity}" />
            </template>
          </Column>
          <Column sortProperty="customer" filterProperty="customer">
            <m:Label tooltip="Customer" text="Customer" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>customer}" />
            </template>
          </Column>
          <Column sortProperty="end_user" filterProperty="end_user">
            <m:Label tooltip="End User" text="End User" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>end_user}" />
            </template>
          </Column>
          <Column sortProperty="total_amount" filterProperty="total_amount">
            <m:Label tooltip="Total Amount" text="Total Amount" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>total_amount}" />
            </template>
          </Column>
          <Column sortProperty="bid_deadline" filterProperty="bid_deadline">
            <m:Label tooltip="BID Deadline" text="BID Deadline" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>bid_deadline}" />
            </template>
          </Column>
          <Column sortProperty="bid_signdate" filterProperty="bid_signdate">
            <m:Label tooltip="BID Sign Date" text="BID Sign Date" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>bid_signdate}" />
            </template>
          </Column>
          <Column sortProperty="relative_offer" filterProperty="relative_offer">
            <m:Label tooltip="Relative Offer" text="Relative Offer" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>relative_offer}" />
            </template>
          </Column>
          <Column sortProperty="data" filterProperty="data">
            <m:Label tooltip="Data" text="Data" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>data}" />
            </template>
          </Column>
          <Column sortProperty="amount" filterProperty="amount">
            <m:Label tooltip="Amount" text="Amount" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>amount}" />
            </template>
          </Column>
          <Column sortProperty="contract" filterProperty="contract">
            <m:Label tooltip="Contract" text="Contract" />
            <template>
              <m:Input editable="{detailsDialog>input_editable}" value="{detailsDialog>contract}" />
            </template>
          </Column>
          <Column hAlign="Center">
            <m:Label tooltip="Attachments" text="Attachments" />
            <template>
              <m:Button icon="sap-icon://attachment" press=".onAttachmentButtonPress" />
            </template>
          </Column>
        </columns>
      </Table>
  </m:VBox>
</core:FragmentDefinition>