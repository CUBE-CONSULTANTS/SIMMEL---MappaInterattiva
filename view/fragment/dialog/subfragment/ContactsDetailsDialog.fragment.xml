<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>
  <Dialog 
    title="Contacts"
  >
    <buttons>
      <Button text="Close" press=".onDefaultDialogClose" />
    </buttons>
    <content>
      <VBox class="sapUiSmallMargin">
        <Label text="Address" />
        <Input editable="{contactsDialog>/input_editable}" value="{contactsDialog>/contacts/address}" />
      </VBox>
      <VBox class="sapUiSmallMargin">
        <Label text="Phone" />
        <Input editable="{contactsDialog>/input_editable}" value="{contactsDialog>/contacts/phone}" />
      </VBox>
      <VBox class="sapUiSmallMargin">
        <Label text="Email" />
        <Input editable="{contactsDialog>/input_editable}" value="{contactsDialog>/contacts/email}" />
      </VBox>
    </content>
  </Dialog>
</core:FragmentDefinition>