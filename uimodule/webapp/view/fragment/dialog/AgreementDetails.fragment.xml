<core:FragmentDefinition
  xmlns="sap.ui.table"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core"
>
  <m:VBox>
    <Table
        visibleRowCount="20"
        selectionMode="None"
        rows="{detailsDialog>/agreement/items}"
      >
        <columns>
          <Column sortProperty="agency" filterProperty="agency">
            <m:Label text="Agency" />
            <template>
              <m:Text text="{detailsDialog>agency}" />
            </template>
          </Column>
          <Column sortProperty="agent" filterProperty="agent">
            <m:Label text="Agent" />
            <template>
              <m:Text text="{detailsDialog>agent}" />
            </template>
          </Column>
          <Column hAlign="Center" sortProperty="contacts" filterProperty="contacts">
            <m:Label text="Contacts" />
            <template>
              <m:Button icon="sap-icon://contacts" press=".onContactsButtonPress" />
            </template>
          </Column>
          <Column sortProperty="start_date" filterProperty="start_date">
            <m:Label text="Start Date" />
            <template>
              <m:Text text="{
                path: 'detailsDialog>start_date', 
                formatter: '.formatter.formatStandardDate'
              }" />
            </template>
          </Column>
          <Column sortProperty="sign" filterProperty="sign">
            <m:Label text="Sign" />
            <template>
              <m:Text text="{detailsDialog>sign}" />
            </template>
          </Column>
          <Column sortProperty="sales_referent" filterProperty="sales_referent">
            <m:Label text="Sales Referent" />
            <template>
              <m:Text text="{detailsDialog>sales_referent}" />
            </template>
          </Column>
          <Column sortProperty="contact_sales" filterProperty="contact_sales">
            <m:Label text="Contact Sales" />
            <template>
              <m:Text text="{detailsDialog>contact_sales}" />
            </template>
          </Column>
          <Column sortProperty="products_list" filterProperty="products_list">
            <m:Label text="Products List" />
            <template>
              <m:Text text="{detailsDialog>products_list}" />
            </template>
          </Column>
        </columns>
      </Table>
  </m:VBox>
</core:FragmentDefinition>